<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Kullan覺c覺 emaili"
        android:textColor="#0E08BD"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/recycler_row_imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/gorselsecimi" />

    <TextView
        android:id="@+id/recycler_row_kullanici_yorumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Kullan覺c覺 Yorumu"
        android:textColor="#293673"
        android:textSize="18sp" />
</LinearLayout>